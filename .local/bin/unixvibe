#!/bin/bash

INSTALL_DIR="$HOME/.config/unixvibe"

if [ ! -d "$INSTALL_DIR" ]; then
    echo "Error: Unixvibe is not installed properly. Please run install.sh again."
    exit 1
fi

cd "$INSTALL_DIR"

if [ -z "$1" ]; then
    # Launch GUI
    gjs -m js/theme-selector-popup.js
else
    # Apply theme via CLI
    gjs -m js/theme-selector-popup.js "$1"
fi
